<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <name>Maven Bin</name>
    <groupId>me.andrz.maven</groupId>
    <artifactId>bin-parent</artifactId>
    <version>1.0</version>
    <packaging>pom</packaging>

    <properties>
        <gmavenPlusVersion>1.5</gmavenPlusVersion>
        <groovyVersion>2.4.2</groovyVersion>
        <url>https://andrz.me/maven-bin/</url>
    </properties>

    <modules>
        <module>bin-core</module>
        <module>bin-cli</module>
        <module>bin-maven-plugin</module>
    </modules>

    <distributionManagement>
        <site>
            <id>${project.name}</id>
            <name>${project.name}</name>
            <url>${url}</url>
        </site>
    </distributionManagement>

    <build>
        <pluginManagement>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>3.4</version>
                <configuration>
                    <stagingDirectory>target/staging</stagingDirectory>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
